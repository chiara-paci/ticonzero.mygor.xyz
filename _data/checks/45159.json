    "text": [
        "Pochezza",
        "Premediti muto",
        "le tue beffe",
        "Egocentrico spregio",
        "di piccolo uomo",
        "Malgarbo ilare",
        "che ambisce elogio",
        "Triste sunto",
        "di umane fiacchezze",
        "Olio su ghiaccio",
        "le tue pochezze",
        "Scorrono in basso",
        "sui miei piedi fermi",
        "e sulle tue deformi pendici"
    ],
